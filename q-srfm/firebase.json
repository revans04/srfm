{
  "hosting": {
    "site": "budget-buddy-a6b6c",
    "public": "dist/spa",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/api/budget/ping", "run": { "serviceId": "family-budget-api", "region": "us-central1" } },
      {
        "source": "/api/**",
        "run": {
          "serviceId": "family-budget-api",
          "region": "us-central1"
        }
      },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
